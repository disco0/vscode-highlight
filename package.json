{
  "name": "vscode-highlight",
  "displayName": "Highlight",
  "description": "Advanced text highlighter based on regexes. Useful for todos, annotations, colors etc.",
  "icon": "resources/logo-128x128.png",
  "version": "1.4.2",
  "license": "MIT",
  "main": "dist/extension.js",
  "publisher": "disk0",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Highlight - Configuration",
      "properties": {
        "highlight.decorations": {
          "type": "object",
          "description": "Default decorations from which all others inherit from",
          "default": {
            "rangeBehavior": 3
          }
        },
        "highlight.regexes": {
          "type": "object",
          "description": "Object mapping regexes to an array of decorations to apply to the capturing groups",
          "default": {}
        },
        "highlight.regexFlags": {
          "type": "string",
          "description": "Flags used when building the regexes",
          "default": "gi"
        },
        "highlight.maxMatches": {
          "type": "number",
          "description": "Maximum number of matches to decorate per regex, in order not to crash the app with accidental cathastropic regexes",
          "default": 250
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "rm -rf out && yarn compile:release",
    "publish": "vsce publish && npm publish",
    "compile": "yarn webpack:command:base --mode development --progress",
    "compile:watch": "yarn webpack:command:base --mode development --watch  --progress",
    "compile:release": "yarn webpack:command:base --mode production --progress",
    "compile:watch:release": "yarn webpack:command:base --mode production --watch --progress",
    "test": "node ./node_modules/vscode/bin/test",
    "webpack:command:base": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack",
    "build:vsix": "cross-env VSIX_DIR=./build vsce package --out \"${VSIX_DIR}/$(jq .name ./package.json --raw-output)-$(jq .version ./package.json --raw-output).vsix\""
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/vscode-highlight/issues"
  },
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/vscode-highlight.git"
  },
  "engines": {
    "vscode": "^1.15.0"
  },
  "keywords": [
    "vscode",
    "highlight",
    "text",
    "todo",
    "annotation",
    "vsc",
    "extension"
  ],
  "categories": [
    "Other"
  ],
  "dependencies": {
    "lodash": "^4.17.20",
    "string-matches": "^1.1.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.14.5",
    "@types/vscode": "1.15.0",
    "@types/webpack": "^4.41.23",
    "fork-ts-checker-webpack-plugin": "^5.2.0",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "vscode-test": "^1.4.1",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0"
  }
}
